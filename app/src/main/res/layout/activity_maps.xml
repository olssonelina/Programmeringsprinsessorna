<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout2"
            tools:context="com.example.nightingale.qwalk.View.MapsActivity" />

        <Button
            android:id="@+id/viewPinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="viewPinButtonClicked"
            android:text="Var är frågan?" />

        <ImageView
            android:id="@+id/goUpRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goUpLeft"
            android:layout_marginLeft="300dp"
            map:srcCompat="@drawable/upright" />

        <ImageView
            android:id="@+id/goRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goUpRight"
            android:layout_centerVertical="true"
            map:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/goDownRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goUpRight"
            android:layout_marginTop="440dp"
            map:srcCompat="@drawable/downright" />

        <ImageView
            android:id="@+id/goDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            map:srcCompat="@drawable/down" />

        <ImageView
            android:id="@+id/goDownLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goDownRight"
            android:layout_marginLeft="30dp"
            map:srcCompat="@drawable/downleft" />

        <ImageView
            android:id="@+id/goLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_alignBottom="@+id/goRight"
            map:srcCompat="@drawable/left" />

        <ImageView
            android:id="@+id/goUpLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            map:srcCompat="@drawable/upleft" />

        <ImageView
            android:id="@+id/goUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            map:srcCompat="@drawable/up" />


    </RelativeLayout>

</LinearLayout>
