<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/questionX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Fråga 1."
            android:textSize="24dp" />

        <EditText
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:ems="15"
            android:inputType="textMultiLine"
            android:onClick="clearQuestion"
            android:text="Skriv fråga här" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/question"
            android:layout_marginLeft="310dp"
            android:layout_marginBottom="-80dp"
            android:checked="false"
            android:onClick="radioButtonCheck" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton1"
            android:layout_alignTop="@+id/radioButton1"
            android:layout_marginTop="50dp"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton1"
            android:layout_alignTop="@+id/radioButton2"
            android:layout_marginTop="50dp"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton1"
            android:layout_alignTop="@+id/radioButton3"
            android:layout_marginTop="50dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton1"
            android:layout_alignBottom="@+id/radioButton1"
            android:layout_marginLeft="50dp"
            android:ems="12"
            android:inputType="textPersonName"
            android:onClick="clearOption1"
            android:text="Alternativ 1" />

        <EditText
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton2"
            android:layout_alignBottom="@+id/radioButton2"
            android:layout_alignLeft="@+id/option1"
            android:ems="12"
            android:inputType="textPersonName"
            android:text="Alternativ 2"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton3"
            android:layout_alignBottom="@+id/radioButton3"
            android:layout_alignLeft="@+id/option1"
            android:ems="12"
            android:inputType="textPersonName"
            android:text="Alternativ 3"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton4"
            android:layout_alignBottom="@+id/radioButton4"
            android:layout_alignLeft="@+id/option1"
            android:ems="12"
            android:inputType="textPersonName"
            android:text="Alternativ 4"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton1"
            android:layout_marginLeft="20dp"
            android:text="+"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton2"
            android:layout_marginLeft="20dp"
            android:text="2."
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton3"
            android:layout_marginLeft="20dp"
            android:text="3."
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton4"
            android:layout_marginLeft="20dp"
            android:text="4."
            android:textSize="20dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/done"
            android:layout_alignBottom="@+id/done"
            android:layout_alignLeft="@+id/number4"
            android:layout_alignTop="@+id/number4"
            android:ems="9"
            android:onClick="addQuestion"

            android:text="Lägg till fråga" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/radioButton4"
            android:layout_alignTop="@+id/radioButton4"
            android:layout_marginTop="80dp"
            android:ems="9"
            android:text="Klar" />

    </RelativeLayout>
</LinearLayout>